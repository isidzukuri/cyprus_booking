!!!
%html{lang: "en-US"}
  %head
    %meta{charset: "UTF-8"}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Cyprus Booking"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = javascript_include_tag 'http://maps.googleapis.com/maps/api/js?sensor=false'
    = csrf_meta_tags
    /[if IE] <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  %body{:"data-auto-controller" =>"MapController"}
    #wrapper.map
      %header
        %figure
          %h1
            %a{href: "/"}
              = image_tag "logo.png", :height=>50
        =render "shared/header_right"
        .line
          %a.search{:href=>"#"}
          %nav
            %ul
              %li
                %a.apartments{href: "#",:class=>( params[:controller] =~ /apartments/ ? "active" : "")}
              %li
                %a.hotels{href: "#"}
              %li
                %a.cars{href: "#"}
              %li
                %a.yahts{href: "#"}

      = yield
      #map_apartments
    %footer
      %ul
        %li
          %a{href: "#"}
            = image_tag "ic_facebook.png"
        %li
          %a{href: "#"}
            = image_tag "ic_twitter.png"
        %li
          %a{href: "#"}
            = image_tag "ic_google.png"
:javascript
  window.type = "#{params[:controller]}"




