!!!
%html{lang: "en-US"}
  %head
    %meta{charset: "UTF-8"}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Cyprus Booking"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = javascript_include_tag 'http://maps.googleapis.com/maps/api/js?sensor=false'
    %script{:type => "text/javascript",
        :src  => "https://connect.facebook.net/en_US/all.js"}
    = csrf_meta_tags
    /[if IE] <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  %body{:"data-auto-controller" =>"MapController"}
    #wrapper.map
      %header
        %figure
          %h1
            %a{href: "/"}
              = image_tag "logo.png", :height=>50
        =render "shared/header_right"
        =render "shared/search_and_services_icons"

      = yield
      #map_apartments
    = render "shared/footer"  
:javascript
  window.type = "#{params[:controller]}"
  FBappId = "#{Settings.fb.key}"



