<li class="car_item" id="hotel_<%=apart.id%>">
        <ul class="item_elms">
            <li class="desc">
                <div class="lft"><%=image_tag apart.first_img,:size=>"150x100"%></div>
                <div class="rt">
                    <h3><%=apart.name%></h3>
                    <div class="rating"><span style="width:<%=apart.total_rating.to_f*20%>%"></span></div>
                    <p class="addr"><%=apart.address%></p>
                    <ul class="car_options">
                        <li>Мест: <%=apart.places%></li>
                        <li>Комнат: <%=apart.rooms%></li>
                        <li>Этаж: <%=apart.floor_number%></li>
                    </ul>
                    <span><%= strip_tags CGI::unescapeHTML(truncate(apart.description, length:150, separator: ' ',omission: '...'))%></span>
                </div>
            </li>
            
            <% if false && apart.facilities.any?%>
                <li class="options">
                    <ul>
                        <%apart.facilities.each do |f|%>
                            <li><%=image_tag f.ico %></li>
                        <%end%>
                    </ul>
                </li>
            <%end%>
                                <li class="amount">
                                    <ul>
                                        <li class="plc_count">
                                            <p><%=t("all.hotels.places_avail")%></p>
                                            <span><%=image_tag "plc_count.png"%></span>
                                            <span><%=apart.places%></span>
                                        <li class="price"><span><%="#{apart.period_price(@search)} #{t("all.currencies_symbols.#{$currency}")}"%></span><p><%=t("search.hotels.all_period")%></p></li>
                                    </ul>
                                </li>
                                <li class="pay_btn">
                                    <a target="_blank" href="<%="#{aparts_show_path}/#{apart.id}?session_id=#{@session_id}"%>"><%=t("all.choose")%><span>></span></a>
                                </li>
        </ul>
</li>


