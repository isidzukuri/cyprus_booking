.header_right
  %ul
    %li.icon_search
      %a.lang{:href=>"#"}
        = I18n.locale.upcase
        = render "shared/list/locale"
    %li.icon_money
      %a.cur{:href=>"#"}
        = $currency.upcase
      = render "shared/list/currency"
    %li.icon_guests
      %a{:href=>(logged_in? ? "/user" : "/login"), :class=>(logged_in? ? "" : "login")}=logged_in? ? current_user.fio : "Login".upcase