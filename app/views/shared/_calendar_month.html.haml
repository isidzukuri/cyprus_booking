
.b_calendar
  %a.prev_month{:href => "#"}
  %a.next_month{:href => "#"}
  .b_months_strip
  - unless params[:controller] =~ /cabinet/
    .change_dates
      .dates
        %ul
          %li
            .b_form_text.icon_date
              = text_field_tag :arrival ,@search.arrival.strftime("%d.%m.%Y"),:class=>"form-text"
          %li
            .b_form_text.icon_date
              = text_field_tag :departure, @search.departure.strftime("%d.%m.%Y"),:class=>"form-text"
      %h2=t("front_all.change_dates")
  .clear
%script#calendar_month{ :type => "text/html" }
  %h2 {{month}} {{year}}
  %table.t_month
    %tr
      {{#day_names}}
      %th {{.}}
      {{/day_names}}
    {{#weeks}}
    %tr
      {{#days}}
      %td
        {{#date}}
        %a{:href => "#\{{href}}", :class => "{{css_class}}"}
          {{day}}
        {{/date}}
      {{/days}}
    {{/weeks}}