= form_for @apartament ,:url => params[:action] =~ /new/ ? cabinet_offers_path : cabinet_offer_path(@apartament)  ,:html=>{:class=>"front_validate_form jNice" , :multipart => true} do |f|
	= f.hidden_field :user_id

	.cab_input_bg
		.l_part
			= f.hidden_field :city_id, :class => "city_id_val"
			%input{:name => "city_name", :class=>"city_ico cityIdCheck", :value => "#{@apartament.city_name if(@apartament.city_id.present?)}", :placeholder => t("cabinet.city"), :type=>"text"}
			= f.text_field :house_number , :placeholder => t("cabinet.house_number"), :class=>"city_ico required"
			= f.text_field :full_address , :placeholder => t("cabinet.full_address"), :class=>"city_ico required",:readonly=>true
		.r_part
			= f.text_field :street , :placeholder => t("cabinet.street"), :class=>"city_ico required"
			= f.text_field :flat_number , :placeholder => t("cabinet.flat_number"), :class=>"city_ico"
			= f.text_field :places , :placeholder => t("cabinet.places"), :class=>"places_ico number required"
		.clear
	%br 
	= f.hidden_field :latitude
	= f.hidden_field :longitude
	#google_map

		 
	.block_info
		#{t("cabinet.address_comment")}
	.clear
	%input{ :type => "hidden", :name=>"step", :value => "#{@step}"}
	= f.submit t("cabinet.save"), :class=>"cabinet_submit"
	.clear