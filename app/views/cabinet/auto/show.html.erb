        <div id="main_content">
            <div id="main" >
                <div id="main_wrap">
                    <%=render "cabinet/left_menu"%>
                <div class="right column">
                    <div class="text_content">
                        <%= render partial:"cabinet/auto/book_item",:locals=>{:book=>@book}%>
                        <table>
                            <tr>
                                <th><%=t("all.pick_up_place")%></th>
                                <th><%=t("all.pick_up_date")%></th>
                                <th><%=t("all.dropp_off_place")%></th>
                                <th><%=t("all.dropp_off_date")%></th>
                            </tr>
                            <tr>
                                <td><%=@book.pick_up_place%></td>
                                <td><%=l(@book.pick_up_date,:format=>:long)%></td>
                                <td><%=@book.dropp_off_place%></td>
                                <td><%=l(@book.dropp_off_date,:format=>:long)%></td>
                            </tr>
                            <tr>
                                <th><%=t("all.book_date")%></th>
                                <th><%=t("all.book_number")%></th>
                                <th><%=t("all.franchize_title")%></th>
                                <th><%=t("all.total_cost")%></th>
                            </tr>
                            <tr>
                                <td><%=l(@book.created_at,:format=>:long)%></td>
                                <td><%=@book.reservation_id%></td>
                                <td><%=@book.protect ? t("all._yes") : t("all._no")%></td>
                                <td>
                                    <%="#{(Exchange.convert(@book.base_currency, $currency) * @book.car_price).to_i}"%>
                                    <%=t("all.currencies_symbols.#{$currency}")%>
                                </td>
                            </tr>
                        </table>
                        <%if @book.pick_up_date > Time.now + 2.days && false%>
                        <div class="pay_btn">
                            <a target="_blank" href="#"><%=t("all.cancel_book")%><span>></span></a>
                        </div>
                        <%end%>
                        <div class="car_item">
                            <h3 style="margin: 10px 0;"><%=t("all.driver")%>: <span><%="#{@book.driver_name} #{@book.driver_surname}"%></span></h3>
                        <%if @book.cars_extras.length > 1%>
                            <h3 style="margin: 10px 0;"><%=t("all.additional_book")%>:</h3>
                            <%@book.cars_extras.split(",").in_groups_of(@book.cars_extras.split(",").size/2,false).each do |ext_group|%>
                            <ul class="opton_group">
                                <%ext_group.each do |ext|%>
                                <li><%=ext%></li>
                                <%end%>
                            </ul>
                            <%end%>
                        <%end%>
                        </div>
                        

                        <div class="rules">
                            <%=render :partial => "shared/cars_rules"%>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>