=render "shared/search_and_services_icons"
.clear	
#cabinet
	=render "cabinet/cabinet_header"
	.clear
	.bookings_list.offers_list
		- @offers.each do |b|
			%div.item
				%div{:class=>"item_status edit_ico"}
				%img{:src => "#{b.first_img}"}
				.item_info
					.item_petriod
						%br
						="#{b.full_address}"
					.clear
				.filters_select
					.um_pointer
					.um_wrap
						%a{:href=>"#{cabinet_house_path(b)}/edit?step=address", :class=>"by_ico_edit standart_link"} #{t("cabinet.edit")}
						= link_to t("cabinet.remove"), cabinet_house_path(b), :method => :delete, :class=>"by_ico_delete standart_link"
		%a.item.add_offer{:href=>"/cabinet/#{@service}/new", :title => t("cabinet.add")}
		.clear
	=render "cabinet/cabinet_orange_services"