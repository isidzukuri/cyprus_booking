                <div class="top_search_form" data-auto-controller="TopSearchForm">
                    <%=form_for @apart_search,:url=>aparts_search_path,html:{:"data-complete"=>aparts_complete_path} do |f|%>
                        <ul>
                            <li class="from_item cars">
                                <%= f.select :city_id ,@cities.reverse.push([t("search.hotels.city_name"),""]).reverse,{},required:true%>
                            </li>
                            <li class="from_item">
                                <%=f.text_field :arrival,class:"date_input",required:true%>
                                
                            </li>
                            <li class="from_item">
                                <%=f.text_field :departure,class:"date_input",required:true%>
                            </li>
                            <li class="from_item">
                                <%=f.select :people_count, (1..7).to_a.map{|i|["#{i} #{t("search.aparts.guest")}",i]}%>
                            </li>
                            <li class="from_item">
                                <input type="submit" class="submit" value="<%=t("search.do_submit")%>"/>
                            </li>
                        </ul>
                    <%end%>
                    <%=form_for @hotels_search,:url=>hotels_search_path,html:{:"data-complete"=>hotels_complete_path,:class=>"hidden"} do |f|%>
                        <ul>
                            <li class="from_item cars">
                                <%= f.select :city ,@hotel_cities.reverse.push([t("search.hotels.city_name"),""]).reverse,{},required:true%>
                            </li>

                            <li class="from_item">
                                <%=f.text_field :departure,class:"date_input",required:true%>
                            </li>
                            <li class="from_item">
                                <%=f.text_field :arrival,class:"date_input",required:true%>
                            </li>
                            <li class="from_item">
                                <%= f.fields_for :rooms , @hotels_search.rooms.first do |fr|%>
                                    <%= fr.select :adults , (1..4).to_a.map{|i|["#{i} #{t("search.aparts.guest")}",i]}%>
                                <%end%>
                            </li>
                            <li class="from_item">
                                <input type="submit" class="submit" value="<%=t("search.do_submit")%>"/>
                            </li>
                        </ul>
                    <%end%>
                    <%=form_for @cars_search,:url=>cars_search_path,html:{:class=>"hidden"} do |f|%>
                        
                        <%= f.hidden_field :same_place ,value:1%>
                        <ul>
                            <%= f.fields_for :pick_up, @cars_search.pick_up do |fr|%>
                            <%= fr.hidden_field :country%>
                                <li class="from_item cars biiig">
                                    <%= fr.select :location ,options_for_select(@pick_up_cities_all.reverse.push([t("search.cars.pick_up_city"),""]).reverse,18692),{},:reuired=>true %>
                                </li>
                                <li class="from_item">
                                    <%=fr.text_field :date,class:"date_input",required:true%>
                                </li>
                            <%end%>
                            <%= f.fields_for :dropp_off  , @cars_search.dropp_off do |fr|%>
                                <li class="from_item">
                                    <%=fr.text_field :date,class:"date_input",required:true%>
                                </li>
                            <%end%>
                            <li class="from_item">
                                <input type="submit" class="submit" value="<%=t("search.do_submit")%>"/>
                            </li>
                        </ul>
                    <%end%>
                    <ul>
                            <li class="from_item">
                                <%=select_tag :search__type,options_for_select([[t("search.aparts_"),0],[t("search.hotels_"),1],[t("search.cars_"),2]]),:class=>"search_type"%>
                            </li>
                    </ul>
                </div>