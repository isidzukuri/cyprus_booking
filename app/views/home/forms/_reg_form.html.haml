#login_form.registered
  = form_tag user_register_path, :remote=>true, :"data-auto-controller"=>"RegisterController"  do 
    .buttons
      %a.facebook{:href=>"#",:onclick=>"window.doFbLogin()"} 
        %span=t("user.fb_login")
      %a.register.enter{:href=>"#"} 
        %span=t("user.enter")
    .fields
      .b_form_text.icon_mail
        %span
        = text_field :user,:email  , :class=>"span12", :required=>true , :type=>"email"  ,:autocomplete=>"off"
      .b_form_text.icon_name
        %span
        = text_field :user,:first_name , :class=>"span12", :required=>true,:autocomplete=>"off"
      .b_form_text.icon_pass
        %span
        = text_field :user,:password , :class=>"span12", :required=>true, :type=>"password" ,:autocomplete=>"off"
      .b_form_text.icon_pass
        %span
        = text_field :user,:password_confirmation , :class=>"span12", :required=>true, :type=>"password" ,:autocomplete=>"off"
    .button_login
      = submit_tag t("user.register"), :class=>"submit btn-glow primary login"
    .forgot
      %a{:href=>"#"}=t("user.forgot_pass")

    

