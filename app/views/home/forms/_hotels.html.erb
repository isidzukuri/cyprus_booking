                                <div class="hotels" data-auto-controller="HotelsSearchForm">
                                    <%=form_for @hotels_search,:url=>hotels_search_path,html:{:"data-complete"=>hotels_complete_path} do |f|%>
                                        <div class="advaced_from">
                                            <ul class="rooms_data bottom_ul fr"> </ul>
                                        </div>
                                        <ul class="top_ul">
                                            <li>
                                                <%=f.text_field :city,class:"city_name",placeholder:t("search.hotels.city_name"),required:true%>
                                                <%=f.hidden_field :place_code,required:true%>
                                            
                                            </li>
                                            <li>
                                                <div class="dates">
                                                    <label><%=t("search.hotels.departure")%></label>
                                                    <%=f.text_field :departure,class:"city_name date_input",required:true%>
                                                </div>
                                                <div class="dates">
                                                    <label><%=t("search.hotels.arrival")%></label>
                                                    <%=f.text_field :arrival,class:"city_name date_input",required:true%>
                                                </div>
                                            </li>

                                        </ul>
                                        <ul class="bottom_ul">
                                            <li style="height:40px;">
                                                <div class="rooms_count ">
                                                    <label><%=t("search.hotels.rooms_count")%></label>
                                                    <%=f.select :rooms_count, (1..7).to_a%>
                                                </div>

                                            </li>
                                        </ul>
                                        <ul class="rooms_data bottom_ul ft">
                                            <label class="label"><%=t("search.hotels.room")%> 1</label>
                                            <%= f.fields_for :rooms , @hotels_search.rooms.first do |fr|%>
                                                <li class="one_room">
                                                    <div class="adt">
                                                        <label><%=t("search.hotels.adt")%> </label>
                                                        <%= fr.select :adults , (1..4).to_a%>
                                                    </div>
                                                    <div class="chd">
                                                        <label><%=t("search.hotels.chd")%> </label>
                                                        <%= fr.select :childs , (0..1).to_a%>
                                                    </div>
                                                    <div class="chd_age">
                                                        <label><%=t("search.hotels.chd_age")%> </label>
                                                        <%= fr.select :child_age , (1..17).to_a%>
                                                    </div>
                                                </li>
                                            <% end %>
                                        </ul>
                                        <ul class="submit_ul">
                                            <li class="submit">
                                                <a href="#"><%=t("search.submit")%></a>
                                            </li>
                                        </ul>
                                    <% end %>
                                </div>